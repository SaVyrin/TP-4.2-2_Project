<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Regular.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Regular.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.Bold.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold.14.White">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Bold.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Bold.18">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
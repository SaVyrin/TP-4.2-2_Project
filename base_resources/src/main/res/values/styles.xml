<resources>
    <!-- светлая тема -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackgroundLight</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>

        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textCursorDrawable">@null</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextAppearance">@style/Text.Regular.12</item>

        <item name="hintTextAppearance">@style/Text.Medium.12</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>

        <item name="boxBackgroundColor">@color/light_gray</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="MetricsTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textCursorDrawable">@null</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextAppearance">@style/Text.Regular.12</item>

        <item name="hintTextAppearance">@style/Text.Medium.12</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>

        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
</resources>
